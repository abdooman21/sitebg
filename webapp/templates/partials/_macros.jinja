{% macro form_macro(field) %}
    <div class="mb-3"> {# Using Bootstrap 5 spacing utility mb-3 #}
        {{ field.label(class="form-label") }} {# Added form-label for Bootstrap styling #}
        {% if field.type == 'StringField' or field.type == 'PasswordField' or field.type == 'TextAreaField' %}
            {% if field.errors %}
                {{ field(class="form-control is-invalid") }} {# Apply is-invalid for fields with errors #}
                {% for error in field.errors %}
                    <div class="invalid-feedback">
                        {{ error }}
                    </div>
                {% endfor %}
            {% else %}
                {{ field(class="form-control") }} {# Standard form-control for valid fields #}
            {% endif %}
        {% elif field.type == 'BooleanField' %}
            <div class="form-check">
                {{ field(class="form-check-input") }}
                {{ field.label(class="form-check-label") }}
            </div>
        {% elif field.type == 'FileField' %}
            {% if field.errors %}
                {{ field(class="form-control-file is-invalid") }}
                {% for error in field.errors %}
                    <div class="invalid-feedback">
                        {{ error }}
                    </div>
                {% endfor %}
            {% else %}
                {{ field(class="form-control-file") }}
            {% endif %}
        {% endif %}
        {% if field.description %}
            <small class="form-text text-muted">{{ field.description }}</small>
        {% endif %}
    </div>
{% endmacro %}